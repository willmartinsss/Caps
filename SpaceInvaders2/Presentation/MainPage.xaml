<Page
    x:Class="SpaceInvaders.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#000">

    <Canvas x:Name="GameCanvas"
            KeyDown="Page_KeyDown"
            KeyUp="Page_KeyUp"
            IsTabStop="True"
            Background="#000">

        <TextBlock x:Name="ScoreText"
                   Text="SCORE: 0"
                   Foreground="#fff"
                   FontSize="20"
                   Canvas.Left="10"
                   Canvas.Top="10"/>

        <Rectangle x:Name="PlayerShip"
                   Width="40" Height="20"
                   Fill="#00FF00"
                   Canvas.Left="380"
                   Canvas.Top="550"/>

    </Canvas>
</Page>
